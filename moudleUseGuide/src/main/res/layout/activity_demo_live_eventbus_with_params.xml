<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/layout_common_toolbar" />

        <TextView
            android:id="@+id/tv_msg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/qb_px_40"
            android:paddingVertical="@dimen/qb_px_40"
            android:background="@color/color_fafafa"
            android:textColor="@color/colorCancel"
            android:textSize="@dimen/qb_px_48"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_jump"
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_144"
            android:layout_marginHorizontal="@dimen/qb_px_40"
            android:layout_marginTop="@dimen/qb_px_40"
            android:background="@color/colorAccent"
            android:gravity="center"
            android:text="返回上一页"
            android:textColor="@color/white"
            android:textSize="@dimen/qb_px_42"
            android:textStyle="bold" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>