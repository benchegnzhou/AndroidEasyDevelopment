<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_rootview"
    android:layout_width="@dimen/qb_px_340"
    android:layout_height="@dimen/qb_px_340"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_photo_select"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">


        <ImageView
            android:id="@+id/iv_pic"
            android:layout_width="@dimen/qb_px_320"
            android:layout_height="@dimen/qb_px_320"
            android:layout_margin="@dimen/qb_px_10"
            android:scaleType="centerCrop"
            android:src="@drawable/banner_default" />


        <ImageView
            android:id="@+id/iv_delete"
            android:layout_width="@dimen/qb_px_66"
            android:layout_height="@dimen/qb_px_68"
            android:scaleType="centerInside"
            android:src="@drawable/seg_ic_delete" />


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_holder_view"
        android:layout_width="@dimen/qb_px_320"
        android:layout_height="@dimen/qb_px_320"
        android:layout_margin="@dimen/qb_px_10"
        android:background="#fff"
        android:visibility="visible">

        <com.ztsc.commonutils.customview.imageview.RoundImageView
            android:id="@+id/view2"
            android:layout_width="@dimen/qb_px_166"
            android:layout_height="@dimen/qb_px_166"
            android:layout_centerInParent="true"
            android:layout_marginTop="@dimen/qb_px_44"
            android:scaleType="fitXY"
            android:src="@drawable/seg_ic_add" />

        <!--<TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/view2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/qb_px_22"
            android:text="添加图片"
            android:textColor="@color/color_text_999999"
            android:textSize="@dimen/qb_px_40" />-->

    </RelativeLayout>

</RelativeLayout>
