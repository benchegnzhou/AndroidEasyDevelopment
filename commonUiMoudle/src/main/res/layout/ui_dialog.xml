<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="@dimen/qb_px_848"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardBackgroundColor="@color/color_transp_common_ui"
    app:cardCornerRadius="@dimen/qb_px_26"
    app:cardElevation="0px"
    tools:context=".dialog.UIDialog">

    <LinearLayout
        android:id="@+id/ll_ui_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/common_message_dialog"
        android:paddingTop="@dimen/qb_px_80">

        <com.ztsc.commonuimoudle.textview.SmartTextView
            android:id="@+id/tv_ui_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="#333333"
            android:textSize="@dimen/qb_px_44"
            android:textStyle="bold"
            tools:text="标题" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_1"
            android:layout_marginTop="@dimen/qb_px_60"
            android:background="@color/common_ui_colorLine" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/qb_px_129"
            android:orientation="horizontal">

            <com.ztsc.commonuimoudle.textview.SmartTextView
                android:id="@+id/tv_ui_cancel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_selector"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/common_cancel"
                android:textStyle="bold"
                android:textColor="@color/common_ui_colorCancel"
                android:textSize="@dimen/qb_px_44" />

            <View
                android:id="@+id/v_ui_line"
                android:layout_width="@dimen/qb_px_1"
                android:layout_height="match_parent"
                android:background="@color/common_ui_colorLine" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_ui_confirm"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/transparent_selector"
                android:focusable="true"
                android:gravity="center"
                android:text="@string/common_confirm"
                android:textStyle="bold"
                android:textColor="@color/common_ui_colorConfirm"
                android:textSize="@dimen/qb_px_44" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>