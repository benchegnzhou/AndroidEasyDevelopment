<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rl_message_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/icon_view"
        android:layout_width="@dimen/qb_px_198"
        android:layout_height="@dimen/qb_px_198"
        android:src="@drawable/ic_sbtc_fj"
        android:layout_marginTop="@dimen/qb_px_30"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_message_message"
        android:layout_width="match_parent"
        android:layout_below="@+id/icon_view"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/qb_px_163"
        android:layout_marginTop="@dimen/qb_px_23"
        android:layout_marginRight="@dimen/qb_px_163"
        android:layout_marginBottom="@dimen/qb_px_20"
        android:gravity="center"
        android:lineSpacingExtra="@dimen/qb_px_8"
        android:textColor="#333333"
        android:textSize="@dimen/qb_px_44"
        tools:context=".dialog.MessageDialog"
        tools:text="内容" />
</RelativeLayout>