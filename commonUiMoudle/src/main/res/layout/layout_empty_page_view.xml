<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/status_view_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!--  空数据界面  -->
    <include
        android:id="@+id/rl_layout_emptydata_view"
        layout="@layout/layout_item_emptydata_pageview"
        android:visibility="gone" />


    <!--  网络错误  -->
    <include
        android:id="@+id/rl_layout_neterror_view"
        layout="@layout/layout_item_neterror_pageview"
        android:visibility="gone" />


    <!--  数据错误  -->
    <include
        android:id="@+id/rl_layout_dataerror_view"
        layout="@layout/layout_item_data_error_pageview"
        android:visibility="gone" />


    <!--  数据加载中  -->
    <include
        android:id="@+id/rl_layout_loading_view"
        layout="@layout/layout_item_loading_pageview"
        android:visibility="gone" />


</RelativeLayout>
