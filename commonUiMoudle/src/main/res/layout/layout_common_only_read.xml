<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/qb_px_144"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/iv_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qb_px_40">
    </ImageView>

    <TextView
        android:id="@+id/tv_tittle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/qb_px_15"
        android:layout_toRightOf="@id/iv_left"
        android:textColor="@color/common_ui_333333"
        android:textSize="@dimen/qb_px_46"></TextView>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="@dimen/qb_px_40"
        android:textColor="@color/common_ui_666666"
        android:textSize="@dimen/qb_px_44"></TextView>
</RelativeLayout>