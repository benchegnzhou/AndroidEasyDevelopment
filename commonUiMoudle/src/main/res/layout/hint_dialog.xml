<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/common_ui_black85"
    app:cardCornerRadius="@dimen/qb_px_45"
    app:cardElevation="0px"
    tools:context=".dialog.HintDialog">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:minWidth="@dimen/qb_px_330"
        android:minHeight="@dimen/qb_px_330"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_hint_icon"
            android:layout_width="@dimen/qb_px_180"
            android:layout_height="@dimen/qb_px_180"
            android:layout_marginTop="@dimen/qb_px_30"
            app:srcCompat="@drawable/warning_ic" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tv_hint_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/qb_px_45"
            android:layout_marginTop="@dimen/qb_px_15"
            android:layout_marginBottom="@dimen/qb_px_30"
            android:maxLines="3"
            android:textColor="@color/common_ui_white"
            android:textSize="@dimen/qb_px_42"
            tools:text="提示语" />
    </LinearLayout>

</androidx.cardview.widget.CardView>